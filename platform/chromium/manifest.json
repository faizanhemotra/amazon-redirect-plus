{
  "manifest_version": 3,
  "name": "Amazon Redirect Plus",
  "version": null,
  "description": "This extension adds a convenient widget to the top of Amazon product pages, enabling seamless switching between various regional storefronts. Additionally, it includes a search button for unavailable items, searching by Item Model Number, part number, or product title, prioritizing availability in that order.",
  "homepage_url": "https://github.com/faizanhemotra/amazon-redirect-plus",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.ca/*",
        "*://www.amazon.co.jp/*",
        "*://www.amazon.co.uk/*",
        "*://www.amazon.com/*",
        "*://www.amazon.com.au/*",
        "*://www.amazon.com.br/*",
        "*://www.amazon.com.mx/*",
        "*://www.amazon.de/*",
        "*://www.amazon.es/*",
        "*://www.amazon.fr/*",
        "*://www.amazon.in/*",
        "*://www.amazon.it/*",
        "*://www.amazon.nl/*",
        "*://www.amazon.se/*",
        "*://www.amazon.sg/*"
      ],
      "js": ["/common/amazonFronts.js", "contentScript.js", "warehouseDeals.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "/background/background.js",
    "type": "module"
  },
  "options_ui": { "page": "/options/options.html", "open_in_tab": true },
  "action": { "default_popup": "/options/options.html" },
  "icons": {
    "16": "/resources/icon.png",
    "20": "/resources/icon.png",
    "24": "/resources/icon.png",
    "32": "/resources/icon.png"
  }
}
